# Weaviate Cloud Service (Vector DB)
WEAVIATE_URL=https://your-cluster.weaviate.cloud
WEAVIATE_API_KEY=your_weaviate_api_key
WEAVIATE_CLASS_NAME=Documents

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Embeddings (Amazon Titan Text Embeddings V2)
EMBEDDINGS_PROVIDER=aws
EMBEDDINGS_MODEL_ID=amazon.titan-embed-text-v2:0
EMBEDDINGS_REGION=us-east-1
EMBEDDINGS_DIMENSIONS=1024

# LLM (Meta Llama3)
LLM_PROVIDER=aws
LLM_MODEL_ID=meta.llama3-8b-instruct-v1:0
LLM_REGION=us-east-1
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_RELOAD=False

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# RAG Configuration
RAG_MAX_CONTEXT_LENGTH=4000
RAG_TOP_K_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Database Configuration
DATABASE_TYPE=postgresql  # Options: postgresql, mysql, sqlite, mongodb, dynamodb
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=qamaq_rag
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# NoSQL Specific (MongoDB)
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017/qamaq_rag

# DynamoDB Specific (uses existing AWS credentials)
# DYNAMODB_TABLE_PREFIX=qamaq_rag
# DYNAMODB_REGION=us-east-1

# Environment
ENVIRONMENT=development
